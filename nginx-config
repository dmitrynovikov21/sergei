server {
    listen 80;
    server_name aizvonit.ru www.aizvonit.ru;
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl;
    server_name aizvonit.ru www.aizvonit.ru;

    ssl_certificate /etc/letsencrypt/live/aizvonit.ru/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/aizvonit.ru/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    # Handle large URIs (base64 images in query params)
    large_client_header_buffers 4 32k;
    client_header_buffer_size 32k;
    
    # Allow large file uploads
    client_max_body_size 50M;

    location / {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
        
        # Security headers
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
